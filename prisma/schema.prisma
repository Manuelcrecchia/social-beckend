  url      = env("psql 'postgresql://neondb_owner:npg_dyagelx63cXI@ep-noisy-sea-ag71u5aj-pooler.c-2.eu-central-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require'")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())

  accounts  Account[]
  posts     Scheduler[]
  analytics Analytics[]
}

model Account {
  id           Int      @id @default(autoincrement())
  platform     String
  username     String?
  token        String?
  refreshToken String?
  status       String   @default("connected")
  createdAt    DateTime @default(now())

  userId Int
  user   User     @relation(fields: [userId], references: [id])
}

model Scheduler {
  id        Int      @id @default(autoincrement())
  platform  String
  caption   String?
  date      DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Analytics {
  id        Int      @id @default(autoincrement())
  userId    Int
  views     Int      @default(0)
  likes     Int      @default(0)
  followers Int      @default(0)
  date      DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
